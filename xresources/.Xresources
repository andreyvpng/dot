*font: xft:Roboto:size=14

!
! URXVT
!
URxvt*scrollBar:                  false
URxvt*mouseWheelScrollPage:       false
URxvt*cursorBlink:                true
URxvt*background:                 #151515
URxvt*foreground:                 grey
URxvt*saveLines:                  5000
URxvt.internalBorder:             20

URxvt*.font: xft:JetBrains Mono:style=Regular:size=13
URxvt*.boldFont: xft:JetBrains Mono:style=Bold:size=13
URxvt*.italicFont: xft:JetBrains Mono:style=Italic:size=13
URxvt*.boldItalicFont: xft:JetBrains Mono:style=Bold Italic:size=13

! Normal copy-paste keybindings without perls
URxvt.iso14755:                   false
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
URxvt.keysym.Control-Left:        \033[1;5D
URxvt.keysym.Shift-Control-Left:  \033[1;6D
URxvt.keysym.Control-Right:       \033[1;5C
URxvt.keysym.Shift-Control-Right: \033[1;6C
URxvt.keysym.Control-Up:          \033[1;5A
URxvt.keysym.Shift-Control-Up:    \033[1;6A
URxvt.keysym.Control-Down:        \033[1;5B
URxvt.keysym.Shift-Control-Down:  \033[1;6B

URxvt.termName: rxvt-unicode-256color

!
! rofi
!

rofi.modi:                           window,drun,run
rofi.sidebar-mode:                   true
rofi.opacity:                        100
rofi.width:                          50
rofi.lines:                          8
rofi.columns:                        1
rofi.font:                           Roboto 16

rofi.bw:                             10
rofi.location:                       0
rofi.padding:                        20
rofi.levenshtein-sort:               true
rofi.case-sensitive:                 false
rofi.fuzzy:                          false
rofi.line-margin:                    2
rofi.separator-style:                solid
rofi.hide-scrollbar:                 true
rofi.markup-rows:                    false
rofi.scrollbar-width:                8
